CFLAGS=-Wall -pedantic -std=c11

all: 						test1

integrate.o: 		integrate.c integrate.h
								gcc $(CFLAGS) -c integrate.c

test1.o: 				test1.c integrate.h
								gcc $(CFLAGS) -c test1.c

test1:					test1.o integrate.o
								gcc $(CFLAGS) test1.o integrate.o -o test1

Clean:
								rm -f *.o test1
